// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  firstName         String
  lastName          String
  phone             String?
  socialLink        String?
  profilePicture    String?   // ‚Üê NOWA LINIA
  password          String
  emailVerified     DateTime?
  verificationToken String?
  resetToken        String?   // üî• NOWE POLE
  resetTokenExpiry  DateTime? // üî• NOWE POLE
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  @@map("users")
}